{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "jest": true
  },
  "extends": [
    "standard"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2015
  },
  "rules": {
    "space-before-function-paren": ["error", "never"]
  },
  "plugins": ["jest"],
  "overrides": [
    {
      "files": [
        "**/*.js"
      ],
      "excludedFiles": "**/__tests__/*.js"
    }
  ]
}